<!--Muestra una panoramica de todos los hoteles esta es un partial View-->
@model Hotel
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageUrl" alt="" class="img-responsive"/>
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <div class="caption">
            <h3><a asp-controller="Hotel" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></h3>

            <p>@Model.ShortDescription</p>
        </div>
        <br/>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-danger" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-id="@Model.Id">Reservar</a>
            </p>
        </div>
    </div>
</div>